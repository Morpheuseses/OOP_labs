<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CollectionApp.ViewModels.Pages"
             x:Class="CollectionApp.Views.Pages.ModifyElement"
             x:DataType="vm:ModifyElementViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="300,*" Margin="20" >
        <TextBlock Grid.Row="0" Text="Изменение элемента" Foreground="{DynamicResource PrimaryForeground}" FontSize="25"/>
        <!-- Name -->
        <TextBlock Text="Наименование:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground}"/>
        <TextBox Text="{Binding Title, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" />

        <!-- Date -->
        <TextBlock Text="Дата(ГГГГ-ММ-ДД):" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"  Foreground="{DynamicResource PrimaryForeground}"/>
        <TextBox Text="{Binding Date, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Width="100" HorizontalAlignment="Left"/>

        <!-- Duration -->
        <TextBlock Text="Длительность(в секундах):" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground}"/>
        <TextBox Text="{Binding DurationSeconds, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" />
        
        <!-- Questions -->
        <TextBlock Text="Количество вопросов:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground}"/>
        <TextBox Text="{Binding NumberOfQuestions, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" />
        
        <!-- Written Questions -->
        <TextBlock Text="Количество письменных вопросов:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground}"/>
        <TextBox Text="{Binding NumberOfWrittenQuestions, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" />

        <!-- Graduation level -->
        <TextBlock Text="Ученая степень:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground}"/>
        <TextBox Text="{Binding GraduationLevel, Mode=TwoWay}" Grid.Row="6" Grid.Column="1" Width="100" HorizontalAlignment="Left"/>
        
        <TextBlock Text="Тип элемента:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground}"/>
        <ComboBox Grid.Row="7" Grid.Column="1"
          SelectedItem="{Binding SelectedType, Mode=TwoWay}">
          <ComboBox.Items>
           <x:String>Assessment</x:String>
           <x:String>Test</x:String>
           <x:String>Exam</x:String>
           <x:String>FinalExam</x:String>
          </ComboBox.Items>
        </ComboBox>
        <!-- Save button -->
        <Button Content="Изменить элемент" Command="{Binding SaveCommand}" Grid.Row="8" Grid.Column="0"
                HorizontalAlignment="Left" Margin="0,10,0,0" Width="200" Foreground="{DynamicResource PrimaryForeground}"/>
    </Grid>
</UserControl>
