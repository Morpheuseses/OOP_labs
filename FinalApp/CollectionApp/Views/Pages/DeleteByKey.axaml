<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CollectionApp.ViewModels.Pages"
             x:Class="CollectionApp.Views.Pages.DeleteByKey"
             x:DataType="vm:DeleteByKeyViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="300,*" Margin="20">
        <TextBlock Grid.Row="0" Text="Удаление элемента" Foreground="{DynamicResource PrimaryForeground}" FontSize="25"/>
        <TextBlock Text="Ключ элемента:" 
                   Grid.Row="1" Grid.Column="0" 
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource PrimaryForeground}"/>
        <TextBox Text="{Binding Key, Mode=TwoWay}" 
                 Grid.Row="1" Grid.Column="1" Width="200" HorizontalAlignment="Left"/>

        <Button Content="Удалить элемент"
                Command="{Binding DeleteCommand}" 
                Grid.Row="2" Grid.Column="1"
                HorizontalAlignment="Left" 
                Margin="0,10,0,0" 
                Width="200"
                Foreground="{DynamicResource PrimaryForeground}"/>
    </Grid>
</UserControl>
