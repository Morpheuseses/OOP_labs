<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CollectionApp.App"
             xmlns:local="using:CollectionApp"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground">#59635b</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryForeground">#dedede</SolidColorBrush>
        <SolidColorBrush x:Key="AbsoluteBackground">#323d33</SolidColorBrush>
        <LinearGradientBrush x:Key="SidebarBackground" StartPoint="0%, 0%" EndPoint="100%, 0%">
            <GradientStop Offset="0" Color="#415442"></GradientStop>
            <GradientStop Offset="1" Color="#536e55"></GradientStop>
        </LinearGradientBrush>
    </Application.Resources> 
</Application>